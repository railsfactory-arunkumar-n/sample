<h1>Listing products</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.price %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy',  product, :method => :delete, :data => { :confirm => 'Are you sure?' } %>
    
    <%#= link_to "Delete", {:controller=> 'products',:action => 'delete', :id => product.id},:confirm => "Are you sure you want to delete this item?" %>
    
    </td>
  </tr>
<% end %>
</table>

